{
  "name": "@universal/ai-tools-service",
  "version": "1.0.0",
  "description": "Universal AI Tools - Comprehensive AI orchestration platform",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "dev": "ts-node --esm src/index.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,md}",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:api": "jest --testPathPattern=api",
    "test:ci": "jest --ci --coverage --passWithNoTests",
    "build:analyze": "node scripts/build-monitoring/build-performance.js",
    "build:perf": "npm run build:analyze",
    "health:check": "node scripts/health-dashboard/system-health.js",
    "system:health": "npm run health:check",
    "lint:fix:auto": "node scripts/linting/auto-lint-fix.js",
    "lint:auto": "npm run lint:fix:auto",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "quality:fix": "npm run lint:fix && npm run format && npm run type-check",
    "rust:build": "cargo build --release",
    "rust:build:debug": "cargo build",
    "rust:test": "cargo test",
    "rust:check": "cargo check",
    "rust:clippy": "cargo clippy",
    "rust:fmt": "cargo fmt",
    "go:build": "cd go-services && go build ./...",
    "go:test": "cd go-services && go test ./...",
    "go:fmt": "cd go-services && go fmt ./...",
    "go:vet": "cd go-services && go vet ./...",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "services:start": "./start-go-rust.sh",
    "services:stop": "./stop-go-rust.sh",
    "services:status": "./status-go-rust.sh"
  },
  "keywords": [
    "ai",
    "orchestration",
    "agents",
    "machine-learning",
    "typescript",
    "rust",
    "go",
    "microservices"
  ],
  "author": "Universal AI Tools Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "redis": "^4.6.10",
    "ws": "^8.14.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/ws": "^8.5.10",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "prettier": "^3.1.0",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.26.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.18.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/universal-ai-tools/universal-ai-tools.git"
  },
  "bugs": {
    "url": "https://github.com/universal-ai-tools/universal-ai-tools/issues"
  },
  "homepage": "https://github.com/universal-ai-tools/universal-ai-tools#readme"
}
