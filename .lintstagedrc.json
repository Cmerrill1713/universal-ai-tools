{
  "*.{ts,tsx}": [
    "npx tsx scripts/auto-fix-syntax.ts",
    "eslint --config .eslintrc.autofix.json --fix",
    "prettier --write"
  ],
  "*.{js,jsx}": [
    "npx tsx scripts/auto-fix-syntax.ts",
    "eslint --config .eslintrc.autofix.json --fix",
    "prettier --write"
  ],
  "*.{json,md,yml,yaml}": ["prettier --write"],
  "*.sql": ["prettier --write --parser sql"]
}
