{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.backup.*",
    "src.backup.*",
    "src/components/**/*",
    "ui/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "tests/**/*",
    "**/*.js",
    "**/*.d.ts"
  ]
}