# Universal AI Tools - Environment Configuration Template
# Copy this file to .env for local development
# For production, use environment variables or secrets management

# ====================
# Core Configuration
# ====================
NODE_ENV=development # development | production | test
PORT=9999
APP_NAME="Universal AI Tools"

# ====================
# Database Configuration
# ====================
# PostgreSQL (Supabase)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Redis
REDIS_URL=redis://localhost:6379

# Neo4j (Graph Database)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Qdrant (Vector Database)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ====================
# Authentication
# ====================
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# ====================
# AI/LLM Configuration
# ====================
# OpenAI
OPENAI_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# Local LLM (Ollama)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# LM Studio
LM_STUDIO_URL=http://localhost:5901
LM_STUDIO_MODEL=qwen/qwen3-30b-a3b-2507

# ====================
# Service Endpoints
# ====================
# Go API Gateway
GO_API_GATEWAY_URL=http://localhost:8080

# Rust Services
RUST_LLM_ROUTER_URL=http://localhost:8082
RUST_AI_CORE_URL=http://localhost:8083
RUST_VECTOR_DB_URL=http://localhost:8084
RUST_GRAPHRAG_URL=http://localhost:8085

# WebSocket Service
WEBSOCKET_URL=ws://localhost:8090

# ====================
# Monitoring & Observability
# ====================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# OpenTelemetry
OTEL_SERVICE_NAME=universal-ai-tools
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# ====================
# Feature Flags
# ====================
ENABLE_OLLAMA=true
ENABLE_LM_STUDIO=false
ENABLE_HYBRID_GRAPHRAG=true
ENABLE_MEMORY_OPTIMIZATION=true
ENABLE_AUTO_HEALING=true

# ====================
# Performance Tuning
# ====================
HTTP_KEEP_ALIVE_TIMEOUT=120000
HTTP_HEADERS_TIMEOUT=121000
HTTP_REQUEST_TIMEOUT=300000
HTTP_MAX_CONNECTIONS=1000

MEMORY_WARNING_MB=512
MEMORY_CRITICAL_MB=768
MEMORY_EMERGENCY_MB=1024

# ====================
# Development Tools
# ====================
ENABLE_DEBUG_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ERROR_TRACKING=true

# ====================
# External Services
# ====================
SEARXNG_URL=http://localhost:8888
GITHUB_TOKEN=

# ====================
# MLX Configuration (macOS)
# ====================
MLX_MODEL_PATH=./mlx-models
MLX_ADAPTER_PATH=./mlx-adapters
MLX_DEVICE=gpu # gpu | cpu

# ====================
# Security
# ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:9999
SECURE_COOKIES=false # Set to true in production
SESSION_SECRET=your-session-secret-change-in-production