# Docker Environment Variables Example
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=production

# Application
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info

# Database - Local PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/universal_ai_tools

# Supabase Configuration (if using external Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# Security Keys (generate strong random strings)
JWT_SECRET=your-jwt-secret-minimum-32-characters-long
ENCRYPTION_KEY=your-encryption-key-minimum-32-characters
TOKEN_ENCRYPTION_KEY=your-token-encryption-key-32-chars

# AI Service Keys (optional)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Local LLM Services
OLLAMA_URL=http://ollama:11434
LM_STUDIO_URL=http://host.docker.internal:1234

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin-password

# Database Management Tools
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin-password

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_MEMORY_SYSTEM=true
ENABLE_ANTI_HALLUCINATION=true
ENABLE_COGNITIVE_AGENTS=true
ENABLE_TELEMETRY=true

# Performance Settings
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=120000
MEMORY_CACHE_SIZE=5000

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem