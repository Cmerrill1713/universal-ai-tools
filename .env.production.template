# Universal AI Tools - Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# =====================================
# Server Configuration
# =====================================
NODE_ENV=production
PORT=9999
HOST=0.0.0.0

# Domain and SSL
DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com
ENABLE_HTTPS=true
FORCE_HTTPS=true

# =====================================
# Database Configuration (Supabase)
# =====================================
# Production Supabase instance
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_KEY=your-production-service-key

# Database connection settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_TIMEOUT=30000
DB_SSL=true

# =====================================
# Security Configuration
# =====================================
# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-min-256-bits
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-min-64-characters

# API Security
API_RATE_LIMIT=1000
API_RATE_WINDOW=15m
AUTH_RATE_LIMIT=5
AUTH_RATE_WINDOW=15m

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
CORS_CREDENTIALS=true

# =====================================
# External API Keys
# =====================================
# LLM Providers (optional - set only what you use)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_API_KEY=your-google-ai-key
COHERE_API_KEY=your-cohere-key

# Other Services
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# =====================================
# Monitoring & Observability
# =====================================
# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENDPOINT=/metrics

# Health Checks
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s

# =====================================
# Performance Configuration
# =====================================
# Memory Management
NODE_OPTIONS=--max-old-space-size=4096 --optimize-for-size
ENABLE_MEMORY_MONITORING=true
MEMORY_THRESHOLD=80

# Caching
ENABLE_REDIS_CACHE=true
CACHE_TTL=3600
ENABLE_RESPONSE_COMPRESSION=true

# =====================================
# Application Features
# =====================================
# Model Services
ENABLE_OLLAMA=true
OLLAMA_URL=http://ollama:11434
ENABLE_LOCAL_MODELS=true

# Vector Search
ENABLE_VECTOR_SEARCH=true
VECTOR_DIMENSION=1536

# Real-time Features
ENABLE_WEBSOCKETS=true
WEBSOCKET_HEARTBEAT=30s
WEBSOCKET_TIMEOUT=60s

# File Upload
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=.txt,.md,.json,.csv,.pdf

# =====================================
# Monitoring Services
# =====================================
# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password
GRAFANA_PORT=3000

# Prometheus
PROMETHEUS_RETENTION=30d
PROMETHEUS_STORAGE=/prometheus

# =====================================
# Backup & Recovery
# =====================================
# Database Backups
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION=30d

# =====================================
# Development Overrides (set to false in production)
# =====================================
ENABLE_SWAGGER=false
ENABLE_DEBUG_ROUTES=false
ENABLE_VERBOSE_LOGGING=false
SKIP_AUTH_FOR_HEALTH=true
ENABLE_CORS_DEBUG=false

# =====================================
# Deployment Configuration
# =====================================
# Container Settings
CONTAINER_MEMORY_LIMIT=4g
CONTAINER_CPU_LIMIT=2
RESTART_POLICY=always

# Load Balancer
ENABLE_STICKY_SESSIONS=false
LOAD_BALANCE_ALGORITHM=least_conn

# =====================================
# Alerts & Notifications
# =====================================
# Email Notifications (optional)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=notifications@your-domain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Universal AI Tools <noreply@your-domain.com>

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =====================================
# Feature Flags
# =====================================
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_AB_TESTING=false
ENABLE_ANALYTICS=true
ENABLE_USER_TRACKING=true

# =====================================
# Compliance & Privacy
# =====================================
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=365
GDPR_COMPLIANT=true
ANONYMIZE_IPS=true

# =====================================
# Custom Configuration
# =====================================
# Add your custom environment variables here
# CUSTOM_FEATURE_FLAG=true
# CUSTOM_API_ENDPOINT=https://api.custom-service.com