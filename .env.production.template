# Universal AI Tools Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# ===================================
# Core Application Configuration
# ===================================
NODE_ENV=production
PORT=9999

# Application Metadata
APP_NAME="Universal AI Tools"
APP_VERSION="1.0.0"
APP_ENVIRONMENT=production

# ===================================
# Database Configuration (Supabase)
# ===================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here
DATABASE_URL=postgresql://postgres:[password]@[host]:5432/postgres

# ===================================
# Security Configuration
# ===================================
# These should be stored in Supabase Vault, not here
# JWT_SECRET=stored-in-vault
# ENCRYPTION_KEY=stored-in-vault
# TOKEN_ENCRYPTION_KEY=stored-in-vault

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://app.your-domain.com,https://dashboard.your-domain.com

# Rate Limiting
API_RATE_LIMIT=1000
RATE_LIMIT_WINDOW_MS=900000

# ===================================
# Redis Configuration
# ===================================
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your-redis-password
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY_MS=2000

# ===================================
# AI/LLM Service Configuration
# ===================================
# Ollama Local LLM
OLLAMA_URL=http://ollama:11434
OLLAMA_ENABLED=true

# LM Studio
LM_STUDIO_URL=http://lm-studio:1234
LM_STUDIO_ENABLED=false

# External AI Services (API keys stored in Vault)
GROQ_ENABLED=true
TOGETHER_ENABLED=true
HUGGINGFACE_ENABLED=true
GOOGLE_AI_ENABLED=true
ELEVENLABS_ENABLED=true
REPLICATE_ENABLED=true

# ===================================
# MLX Configuration
# ===================================
ENABLE_MLX=true
MLX_MODELS_PATH=/app/models
MLX_MAX_MEMORY_GB=24
MLX_ENABLE_GPU=true

# Vision Processing
ENABLE_SDXL_REFINER=true
VISION_BACKEND=mlx
VISION_MAX_VRAM=20
SDXL_REFINER_PATH=/app/models/sdxl-refiner

# ===================================
# Feature Flags
# ===================================
ENABLE_INTELLIGENT_PARAMETERS=true
ENABLE_AB_MCTS=true
ENABLE_VISION=true
ENABLE_MLX_FINE_TUNING=true
ENABLE_DSPY_ORCHESTRATOR=true
ENABLE_VOICE_PROCESSING=true
ENABLE_HOME_ASSISTANT=false
ENABLE_CALENDAR_INTEGRATION=false

# ===================================
# Monitoring and Observability
# ===================================
ENABLE_METRICS=true
ENABLE_MONITORING=true
ENABLE_TRACING=true
LOG_LEVEL=info

# Prometheus Metrics
PROMETHEUS_METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Logging Configuration
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=50MB
LOG_DATE_PATTERN=YYYY-MM-DD

# ===================================
# Backup Configuration
# ===================================
BACKUP_PATH=/app/backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_INCREMENTAL=false

# Automated Backup Schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ===================================
# Performance Configuration
# ===================================
# Parameter Analytics
PARAMETER_LEARNING_RATE=0.01
PARAMETER_CACHE_TTL=3600
PARAMETER_OPTIMIZATION_ENABLED=true

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Memory Management
NODE_OPTIONS="--max-old-space-size=4096 --optimize-for-size"
UV_THREADPOOL_SIZE=16

# ===================================
# External Service Configuration
# ===================================
# Search Services
SERPER_ENABLED=true
SERPAPI_ENABLED=true

# Browser Automation
BROWSERLESS_ENABLED=true
PLAYWRIGHT_HEADLESS=true

# Vector Database
PINECONE_ENABLED=true

# ===================================
# Domain and SSL Configuration
# ===================================
# Domain Configuration
DOMAIN=your-domain.com
APP_SUBDOMAIN=app
API_SUBDOMAIN=api
DASHBOARD_SUBDOMAIN=dashboard
MONITORING_SUBDOMAIN=monitoring

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem
SSL_CA_PATH=/app/ssl/ca.pem

# Let's Encrypt (if using automated SSL)
LETSENCRYPT_EMAIL=admin@your-domain.com
LETSENCRYPT_STAGING=false

# ===================================
# High Availability Configuration
# ===================================
# Load Balancer
ENABLE_LOAD_BALANCER=true
LOAD_BALANCER_ALGORITHM=round_robin

# Auto-scaling
ENABLE_AUTO_SCALING=true
MIN_INSTANCES=2
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=30

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ===================================
# Enterprise Features
# ===================================
# OAuth2 Configuration
OAUTH2_ENABLED=true
OAUTH2_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH2_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH2_MICROSOFT_CLIENT_ID=your-microsoft-client-id
OAUTH2_MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# RBAC (Role-Based Access Control)
RBAC_ENABLED=true
DEFAULT_USER_ROLE=user
ADMIN_EMAILS=admin@your-domain.com,tech@your-domain.com

# Multi-tenancy
MULTI_TENANT_ENABLED=true
TENANT_ISOLATION_LEVEL=database

# ===================================
# Notification Configuration
# ===================================
# Email Notifications
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=notifications@your-domain.com
SMTP_PASS=your-smtp-password

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#universal-ai-alerts

# ===================================
# Container and Orchestration
# ===================================
# Docker Configuration
DOCKER_REGISTRY=your-registry.com/universal-ai-tools
DOCKER_TAG=latest

# Kubernetes Configuration
K8S_NAMESPACE=universal-ai-tools
K8S_CLUSTER_NAME=production
K8S_CONFIG_PATH=/app/k8s/config

# ===================================
# Development and Debug (Disable in Production)
# ===================================
DEBUG=false
ENABLE_DEBUG_ROUTES=false
ENABLE_CORS_DEBUG=false
VERBOSE_LOGGING=false