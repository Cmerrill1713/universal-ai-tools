# Universal AI Tools - Production Environment Configuration Template
# Copy this file to .env.production and configure your production values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=production
PORT=9999

# Application Domain (for CORS, SSL certificates, etc.)
DOMAIN=your-domain.com
FRONTEND_URL=https://your-domain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration (Production)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# PostgreSQL Connection (if using direct connection)
DATABASE_URL=postgresql://username:password@host:port/database

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis for caching and distributed systems
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# LLM SERVICE CONFIGURATIONS
# =============================================================================

# Ollama Configuration
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_API_KEY=your-ollama-api-key

# LM Studio Configuration
LM_STUDIO_URL=http://host.docker.internal:1234
LM_STUDIO_API_KEY=your-lm-studio-api-key

# =============================================================================
# AI FEATURES CONFIGURATION
# =============================================================================

# MLX Fine-tuning (Apple Silicon)
ENABLE_MLX_FINE_TUNING=false
MLX_MODELS_PATH=/app/models

# Vision Processing
ENABLE_SDXL_REFINER=false
SDXL_REFINER_PATH=/app/models/stable-diffusion-xl-refiner-1.0-Q4_1.gguf
VISION_BACKEND=mlx
VISION_MAX_VRAM=16

# Intelligent Parameters
ENABLE_INTELLIGENT_PARAMETERS=true
PARAMETER_LEARNING_RATE=0.01
PARAMETER_CACHE_TTL=3600

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
API_RATE_LIMIT=1000

# JWT Configuration (stored in Supabase Vault in production)
# These are fallback values - use Supabase Vault for secure storage
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars

# Encryption Keys (stored in Supabase Vault in production)
ENCRYPTION_KEY=your-32-character-encryption-key

# API Keys (stored in Supabase Vault in production)
# These should be moved to Supabase Vault after initial setup
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Monitoring Services
ENABLE_MONITORING=true
ENABLE_TELEMETRY=true

# Grafana Configuration
GRAFANA_PASSWORD=your-secure-grafana-password

# Prometheus Configuration
PROMETHEUS_RETENTION_DAYS=15

# Jaeger Tracing
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Let's Encrypt Configuration
LETSENCRYPT_EMAIL=your-email@domain.com
LETSENCRYPT_STAGING=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels
LOG_LEVEL=info
LOG_FORMAT=json

# Log Retention
LOG_RETENTION_DAYS=30

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# Memory limits (MB)
NODE_MAX_OLD_SPACE_SIZE=4096
PYTHON_MAX_MEMORY=2048

# CPU limits
NODE_CPU_LIMIT=2
PYTHON_CPU_LIMIT=1

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# AWS S3 Configuration (for backups)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Advanced Features
ENABLE_AB_MCTS=true
ENABLE_DSPY_ORCHESTRATION=true
ENABLE_VISION_PROCESSING=true
ENABLE_DEVICE_AUTH=true
ENABLE_MEMORY_PALACE=true
ENABLE_SMART_HEALING=true

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_FEATURES=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Connection Pooling
DB_POOL_SIZE=20
REDIS_POOL_SIZE=10

# Request Timeouts (milliseconds)
API_TIMEOUT=30000
LLM_TIMEOUT=120000
VISION_TIMEOUT=60000

# Caching
CACHE_TTL=3600
MEMORY_CACHE_SIZE=100

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# DEPLOYMENT METADATA
# =============================================================================

# Deployment Information
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_DATE=2025-01-01T00:00:00Z
GIT_COMMIT_SHA=your-git-commit-sha

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker-specific settings
DOCKER_BUILDKIT=1
COMPOSE_PARALLEL_LIMIT=4

# =============================================================================
# SECURITY NOTES
# =============================================================================

# IMPORTANT SECURITY REMINDERS:
# 1. Never commit this file with real values to version control
# 2. Use Supabase Vault for all sensitive API keys and secrets
# 3. Rotate secrets regularly
# 4. Use strong, unique passwords
# 5. Enable 2FA where possible
# 6. Monitor for security vulnerabilities
# 7. Keep dependencies updated
# 8. Use HTTPS in production
# 9. Implement proper CORS policies
# 10. Enable rate limiting and monitoring