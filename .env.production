# Universal AI Tools - Production Environment Template
# SECURITY NOTICE: Copy this to .env.production and replace all CHANGE_ME values
# NEVER commit .env.production to version control

# ===========================================
# CRITICAL SECRETS - CHANGE ALL VALUES
# ===========================================

# Database Passwords - Generate strong passwords
POSTGRES_PASSWORD=OFzdmLPj43lR7037PFWl05klgRCxxg6K
NEO4J_PASSWORD=OFzdmLPj43lR7037PFWl05klgRCxxg6K
GRAFANA_PASSWORD=OFzdmLPj43lR7037PFWl05klgRCxxg6K

# JWT Secret - Use 256-bit random key
JWT_SECRET=CHANGE_ME_TO_256_BIT_RANDOM_SECRET

# API Keys - Add your production keys
ANTHROPIC_API_KEY=CHANGE_ME_TO_ACTUAL_ANTHROPIC_KEY
OPENAI_API_KEY=CHANGE_ME_TO_ACTUAL_OPENAI_KEY

# ===========================================
# CORE SERVICE CONFIGURATION
# ===========================================

# Node.js Environment
NODE_ENV=production
PORT=9999

# Service Names and Versions
SERVICE_NAME=universal-ai-tools
SERVICE_VERSION=1.0.0

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Primary Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=universal_ai_tools
POSTGRES_USER=postgres
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/universal_ai_tools

# Neo4j Graph Database
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j

# Redis Caching Layer
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Qdrant Vector Database
QDRANT_URL=http://qdrant:6333
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# ===========================================
# RUST SERVICE CONFIGURATION
# ===========================================

# LLM Router Service
LLM_ROUTER_HOST=0.0.0.0
LLM_ROUTER_PORT=8001
LLM_ROUTER_WORKERS=4
LLM_ROUTER_MAX_CONNECTIONS=1000
LLM_ROUTER_TIMEOUT=30s
LLM_ROUTER_RATE_LIMIT=100

# GraphRAG Service
GRAPHRAG_HOST=0.0.0.0
GRAPHRAG_PORT=8000
GRAPHRAG_WORKERS=4
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Rust Logging
RUST_LOG=info
RUST_BACKTRACE=0

# ===========================================
# GO SERVICE CONFIGURATION
# ===========================================

# WebSocket Service
WEBSOCKET_PORT=8080
WS_MAX_CONNECTIONS=10000
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_PING_PERIOD=54s
WS_PONG_WAIT=60s
WS_WRITE_WAIT=10s

# Go Environment
GIN_MODE=release

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=universal-ai-tools
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_RESOURCE_ATTRIBUTES=service.name=universal-ai-tools,service.version=1.0.0

# Metrics Ports
METRICS_PORT_LLM_ROUTER=9001
METRICS_PORT_GRAPHRAG=9000
METRICS_PORT_WEBSOCKET=9003

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT Configuration
JWT_EXPIRY=24h

# CORS Configuration - UPDATE TO YOUR DOMAIN
CORS_ORIGIN=https://your-production-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=1000

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================

# SSL Certificate Paths - UPDATE PATHS
SSL_CERT_PATH=/etc/ssl/certs/universal-ai-tools.crt
SSL_KEY_PATH=/etc/ssl/private/universal-ai-tools.key
SSL_CA_PATH=/etc/ssl/certs/ca-certificates.crt

# HTTPS Configuration
HTTPS_PORT=443
FORCE_HTTPS=true

# ===========================================
# DOCKER CONFIGURATION
# ===========================================

# Docker Registry - UPDATE TO YOUR REGISTRY
DOCKER_REGISTRY=your-registry.com/universal-ai-tools
VERSION=latest
PLATFORM=linux/amd64,linux/arm64

# Container Resources
POSTGRES_MAX_CONNECTIONS=200
REDIS_MAX_MEMORY=512mb
NEO4J_HEAP_SIZE=1G

# ===========================================
# MONITORING CONFIGURATION
# ===========================================

# Health Check Intervals
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=20s

# Log Levels
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# ===========================================
# FEATURE FLAGS
# ===========================================

# AI Features
ENABLE_OLLAMA=true
ENABLE_VECTOR_SEARCH=true
ENABLE_GRAPH_RAG=true

# Monitoring Features
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_LOGGING=true

# Security Features
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_SECURITY_HEADERS=true