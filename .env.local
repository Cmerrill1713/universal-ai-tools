# Neo4j (Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
NEO4J_DATABASE=neo4j

# Qdrant (Vector Database for Hybrid GraphRAG)
QDRANT_URL=http://localhost:6333
QDRANT_GRPC_URL=http://localhost:6334
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=universal_ai_vectors
QDRANT_VECTOR_SIZE=1536
QDRANT_DISTANCE_METRIC=cosine
QDRANT_BATCH_SIZE=50
QDRANT_TIMEOUT_MS=15000

# Hybrid GraphRAG Configuration
ENABLE_HYBRID_GRAPHRAG=true
GRAPHRAG_USE_QDRANT=true
GRAPHRAG_USE_NEO4J=true
GRAPHRAG_SYNC_MODE=atomic
GRAPHRAG_CACHE_TTL=1800

# Redis (Caching)
REDIS_URL=redis://localhost:6379
REDIS_MAX_MEMORY=128mb

# Local LLM Configuration (Ollama)
USE_LOCAL_LLM=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
LLM_PROVIDER=ollama

# Disable External Services (but keep local Supabase)
DISABLE_EXTERNAL_APIS=true
DISABLE_TELEMETRY=true
DISABLE_ANALYTICS=true
DISABLE_CLOUD_SERVICES=true

# Performance Optimization
MAX_WORKERS=2
ENABLE_CLUSTERING=false
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=120000

# Memory Management
MEMORY_LIMIT_MB=1024
HEAP_SNAPSHOT_ON_OOM=false
GC_INTERVAL=60000

# Service Configuration
ENABLE_MINIMAL_MODE=true
SERVICE_COUNT_LIMIT=10
ROUTER_CONSOLIDATION=true

# Security (Local-Only)
JWT_SECRET=local-only-secret-change-in-production
SESSION_SECRET=local-session-secret
CORS_ORIGIN=http://localhost:9999

# Logging
LOG_LEVEL=warn
LOG_TO_FILE=false
DEBUG=false
