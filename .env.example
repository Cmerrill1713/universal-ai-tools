SUPABASE_SERVICE_KEY=your_service_key_here

# =============================================================================
# ATHENA CENTRAL INTELLIGENCE
# =============================================================================
# Athena Configuration
ATHENA_PERSONALITY=sweet
ATHENA_INTELLIGENCE_LEVEL=genius
ATHENA_ROUTING_MODE=intelligent

# Neural Routing
ENABLE_NEURAL_ROUTING=true
NEURAL_ROUTING_CONFIDENCE_THRESHOLD=0.7

# UAT-Prompt Routing
ENABLE_UAT_PROMPT_ROUTING=true
UAT_PROMPT_OPTIMIZATION_LEVEL=high

# =============================================================================
# CHAT SERVICE CONFIGURATION
# =============================================================================
# Chat Service
ENABLE_CHAT=true
ENABLE_UAT_PROMPT=true
ENABLE_NEUROFORGE=true
ENABLE_CONTEXT_ENGINEERING=true

# Neuroforge Configuration
NEUROFORGE_MODEL_PATH=./models/neuroforge
NEUROFORGE_MAX_TOKENS=2000
NEUROFORGE_TEMPERATURE=0.7
NEUROFORGE_ENABLE_LEARNING=true
NEUROFORGE_CONTEXT_WINDOW=4000

# =============================================================================
# GOVERNANCE & REPUBLIC SYSTEM
# =============================================================================
# Governance Configuration
ENABLE_GOVERNANCE=true
GOVERNANCE_VOTING_THRESHOLD=0.5
GOVERNANCE_CONSENSUS_THRESHOLD=0.7
GOVERNANCE_PROPOSAL_TIMEOUT=604800
ENABLE_NEURAL_VOTING=true
ENABLE_UAT_PROMPT_ANALYSIS=true

# Republic Configuration
ENABLE_REPUBLIC=true
ENABLE_NEURAL_CITIZENSHIP=true
ENABLE_UAT_PROMPT_CITIZENSHIP=true
REPUTATION_DECAY_RATE=0.01
VOTING_POWER_MULTIPLIER=1.0

# =============================================================================
# LLM SERVICES
# =============================================================================
# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=30000
ENABLE_OLLAMA=true

# LM Studio Configuration
LM_STUDIO_URL=http://localhost:1234

# MLX Configuration
ENABLE_MLX=true
MLX_MODELS_PATH=./models/mlx
MLX_DEFAULT_MODEL=llama3.2-3b

# External LLM APIs (stored in Supabase Vault)
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# API Rate Limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW=900000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# Monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development Tools
ENABLE_DEBUG_MODE=false
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true

# Testing
ENABLE_TEST_MODE=false
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_db

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Production Settings (uncomment for production)
# NODE_ENV=production
# ENABLE_DEBUG_MODE=false
# ENABLE_HOT_RELOAD=false
# LOG_LEVEL=warn