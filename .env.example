# Universal AI Tools Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=9999
HOST=0.0.0.0

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# AI Service API Keys (Optional - only add what you need)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=
GROQ_API_KEY=
COHERE_API_KEY=

# Local LLM Configuration
OLLAMA_URL=http://localhost:11434
LM_STUDIO_URL=http://localhost:1234
USE_LOCAL_MODELS=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# PostgreSQL Configuration (if using local PostgreSQL)
POSTGRES_USER=aitools
POSTGRES_PASSWORD=aitools123
POSTGRES_DB=aitools
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Features
ENABLE_WEBSOCKETS=true
ENABLE_MEMORY_SYSTEM=true
ENABLE_ANTI_HALLUCINATION=true
ENABLE_COGNITIVE_AGENTS=true
ENABLE_METAL_OPTIMIZATION=true

# Performance
MAX_CONCURRENT_REQUESTS=20
REQUEST_TIMEOUT=60000
MEMORY_CACHE_SIZE=2000
WORKER_THREADS=4

# Monitoring
ENABLE_TELEMETRY=true
LOG_LEVEL=info
ENABLE_METRICS=true

# Search Configuration
SEARXNG_URL=http://localhost:8080
SEARXNG_SECRET_KEY=ultrasecretkey

# Model Configuration
DEFAULT_EMBEDDING_MODEL=nomic-embed-text
DEFAULT_LLM_MODEL=llama3.2:3b
EMBEDDING_DIMENSIONS=768

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Grafana Configuration (for monitoring)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin