{
  "name": "universal-ai-tools-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Universal AI Tools macOS app",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:playwright && npm run test:puppeteer && npm run test:swift",
    "test:playwright": "playwright test",
    "test:puppeteer": "node PuppeteerTests.js",
    "test:swift": "swift test",
    "test:hot-reload": "swift run HotReloadTestRunner",
    "test:watch": "nodemon --exec 'npm run test'",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:setup": "npm install && playwright install",
    "test:ci": "npm run test:playwright -- --reporter=html && npm run test:puppeteer && npm run test:swift"
  },
  "keywords": [
    "testing",
    "playwright",
    "puppeteer",
    "swift",
    "macos",
    "ai",
    "automation"
  ],
  "author": "Universal AI Tools Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "puppeteer": "^21.6.0",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "faker": "^6.6.6"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "axios": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/universal-ai-tools/macos-app.git"
  },
  "bugs": {
    "url": "https://github.com/universal-ai-tools/macos-app/issues"
  },
  "homepage": "https://github.com/universal-ai-tools/macos-app#readme"
}
