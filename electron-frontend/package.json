{
  "name": "universal-ai-tools-electron",
  "version": "1.0.0",
  "description": "Universal AI Tools - Beautiful Electron Frontend",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron:wait\"",
    "dev:renderer": "vite --port 3007 --host",
    "dev:electron": "NODE_ENV=development electron . --dev",
    "dev:electron:wait": "./scripts/wait-for-dev-server.sh && npm run dev:electron",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint 'src/**/*.{ts,tsx}' --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:a11y": "vitest run --grep='accessibility'",
    "test:all": "npm run test:run && npm run test:e2e"
  },
  "keywords": [
    "ai",
    "universal",
    "tools",
    "electron",
    "macos"
  ],
  "author": "Universal AI Tools",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.16.0",
    "@playwright/test": "^1.49.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^4.0.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "jsdom": "^26.0.0",
    "puppeteer-core": "^24.17.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@react-spring/web": "^9.7.4",
    "@tanstack/react-query": "^5.62.8",
    "@use-gesture/react": "^10.3.1",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.9",
    "eventemitter3": "^5.0.1",
    "framer-motion": "^11.15.0",
    "immer": "^10.1.1",
    "lucide-react": "^0.468.0",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.0.14",
    "react-hotkeys-hook": "^4.6.1",
    "react-intersection-observer": "^9.14.0",
    "react-parallax-tilt": "^1.7.237",
    "react-router-dom": "^6.28.0",
    "react-window": "^1.8.11",
    "recharts": "^2.15.0",
    "tailwindcss": "^3.4.17",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "build": {
    "appId": "com.universalaitools.electron",
    "productName": "Universal AI Tools",
    "directories": {
      "output": "dist-electron"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ]
  }
}
