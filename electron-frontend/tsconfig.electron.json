{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src/main",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node", "electron"]
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/renderer",
    "src/tests"
  ]
}