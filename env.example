# Universal AI Tools Environment Configuration
# Copy this file to .env and update the values

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=universal_ai_tools
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
DATABASE_URL=postgres://postgres:your_secure_password@localhost:5432/universal_ai_tools

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:your_redis_password@localhost:6379

# NATS Configuration
NATS_URL=nats://localhost:4222

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# Service Ports
API_GATEWAY_PORT=8080
LLM_ROUTER_PORT=3033
ML_INFERENCE_PORT=8091
VISION_SERVICE_PORT=8084
VECTOR_DB_PORT=8085
ASSISTANTD_PORT=8086
MEMORY_SERVICE_PORT=8017
AUTH_SERVICE_PORT=8015
CHAT_SERVICE_PORT=8016
FAST_LLM_PORT=3030
LOAD_BALANCER_PORT=8011
WEBSOCKET_HUB_PORT=8018
CACHE_COORDINATOR_PORT=8012
METRICS_AGGREGATOR_PORT=8013
PARAMETER_ANALYTICS_PORT=3032

# Security
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
API_KEY_SECRET=your_api_key_secret_here_make_it_long_and_random

# Performance
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT_SECONDS=30
CACHE_TTL_HOURS=24

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true

# Vector Database
VECTOR_DB_PERSISTENCE=true
MAX_VECTORS_PER_COLLECTION=1000000
VECTOR_DIMENSION=1536

# Memory Service
MEMORY_RETENTION_DAYS=30
MAX_CONTEXT_LENGTH=4000
CONTEXT_THRESHOLD=0.8

# ML Inference
MODEL_CACHE_SIZE=5
BATCH_SIZE=10
INFERENCE_TIMEOUT_SECONDS=60

# Vision Service
MAX_IMAGE_SIZE_MB=10
SUPPORTED_FORMATS=jpg,jpeg,png,gif,bmp,tiff
OCR_LANGUAGE=en

# Rate Limiting
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# External Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Development
DEBUG_MODE=true
HOT_RELOAD=true
MOCK_SERVICES=false
